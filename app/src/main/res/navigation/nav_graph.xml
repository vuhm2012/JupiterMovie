<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.vuhm.jupitermovie.presentation.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_comingSoonFragment"
            app:destination="@id/comingSoonFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/comingSoonFragment"
        android:name="com.vuhm.jupitermovie.presentation.comming_soon.ComingSoonFragment"
        android:label="ComingSoonFragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.vuhm.jupitermovie.presentation.favorite.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.vuhm.jupitermovie.presentation.search.SearchFragment"
        android:label="SearchFragment" />
</navigation>